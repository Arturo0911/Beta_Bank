<div class="container p-4">
    <form action="/personal/add" method="POST" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputNombre">Nombres</label>
                <input required type="text" class="form-control" id="inputNombre" name="nombres" autofocus>
            </div>
            <div class="form-group col-md-6">
                <label for="inputApellido">Apellidos</label>
                <input required type="text" class="form-control" id="inputApellido" name="apellidos">
            </div>
            <div class="form-group col-md-6">
                <label for="inputCedula">Cedula</label>
                <input required type="text" class="form-control" id="inputCedula" name="cedula">
            </div>
            <div class="form-group col-md-6">
                <label for="inputFoto">Imagen</label>
                <div class="custom-file">
                    <input required type="file" class="custom-file-input" id="inputGroupFile03"
                        aria-describedby="inputGroupFileAddon03" name="image">
                    <label class="custom-file-label" for="inputGroupFile03">Selecciona la imagen</label>
                </div>
                <!--<label for="inputFoto">Imagen</label>
                    <input type="file" class="form-control" id="inputFoto" name="foto">-->
            </div>
            <div class="form-group col-md-6">
                <label for="inputTelefono">Email</label>
                <input required type="text" class="form-control" id="inputEmail4" name="email" name="email">
            </div>
            <div class="form-group col-md-6">
                <label for="inputTelefono">Telefono</label>
                <input required type="text" class="form-control" id="inputTelefono" name="telefono">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Dirección</label>
            <input required type="text" class="form-control" id="inputAddress" placeholder="calle, manzana y/o villa"
                name="direccion">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input required type="text" class="form-control" id="inputCity" name="ciudad">
            </div>
            <div class="form-group col-md-6">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control" name="estado">
                    <option selected>Guayaquil</option>
                    <option>Durán</option>
                </select>
            </div>
            <!--<div class="form-group col-md-2">
                    <label for="inputZip">Zip</label>
                    <input type="text" class="form-control" id="inputZip">
                </div>-->
        </div>
        <!--<div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>-->
        <button type="submit" class="btn btn-success">Guardar</button>
    </form>
    

</div>